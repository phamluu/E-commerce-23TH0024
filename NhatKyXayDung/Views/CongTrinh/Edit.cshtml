@model CongTrinh

@{
    ViewData["Title"] = "Sửa Công trình";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Sửa công trình</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div class="card-header bg-white border-bottom d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="bi bi-check-circle me-1"></i> Lưu
                        </button>
                        <a asp-action="Index" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                @Html.HiddenFor(m => m.Id)
                @Html.Partial("_Fields", Model)
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
