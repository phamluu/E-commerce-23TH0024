@model E_commerce_23TH0024.Models.AspNetUsers

@{
    ViewBag.Title = "Thêm người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4 class="title">Thêm người dùng</h4>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.Partial("_Fields")

        <div class="form-group row mt-2">
            @Html.LabelFor(model => model.PasswordHash, "Mật khẩu", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PasswordHash, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row mt-2">
            <div class="col-md-2"></div>
            <div class="col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default btn-save" />
                @Html.ActionLink("Quay lại danh sách", "Index", "", new {@class = "btn btn-list"})
            </div>
        </div>
    </div>
}

