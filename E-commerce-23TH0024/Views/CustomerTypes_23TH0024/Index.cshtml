@model IEnumerable<E_commerce_23TH0024.Models.CustomerType>

@{
    ViewBag.Title = "Loại khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int i = 1;
}

<h4 class="title">Loại khách hàng</h4>

<p>
    @Html.ActionLink("Thêm mới", "Create", "", new {@class = "btn btn-add"})
</p>
<div id="gridContent">
    <table class="table table-borderd table-hover">
        <tr class="grid-header">
            <th>STT</th>
            <th>
                @Html.DisplayName("Tên loại khách hàng")
            </th>
            <th>Chức năng</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerTypeName)
                </td>
                <td>
                    <a href='@Url.Action("Edit", new {id=item.Id})' class="btn edit-btn"><i class="fa fa-edit"></i></a>
                    <a href='@Url.Action("Details", new {id=item.Id})' class="btn detail-btn"><i class="fa fa-eye"></i></a>
                    <a href='@Url.Action("Delete", new {id=item.Id})' class="btn delete-btn"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
            i++;
        }

    </table>
</div>

