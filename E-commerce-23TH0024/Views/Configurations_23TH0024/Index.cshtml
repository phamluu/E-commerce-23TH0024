@model IEnumerable<E_commerce_23TH0024.Models.Configuration>

@{
    ViewBag.Title = "Cấu hình giao diện";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4 class="title">Cấu hình giao diện</h4>

<p>
    @Html.ActionLink("Thêm cấu hình", "Create", "", new {@class = "btn btn-add"})
</p>
<table class="table">
    <tr>
        <th>
            Tên cấu hình
        </th>
        <th>
            Giá trị
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ConfigName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConfigValue)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id}) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.Id})
        </td>
    </tr>
}

</table>
