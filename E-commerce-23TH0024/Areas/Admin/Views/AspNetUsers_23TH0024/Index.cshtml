@model IEnumerable<E_commerce_23TH0024.Models.UserRolesViewModel>

@{
    ViewBag.Title = "Quản lý người dùng";
}

<h4 class="title">Quản lý người dùng</h4>

<p>
    @Html.ActionLink("Thêm mới", "Create", new { @class = "btn btn-default btn-add" })
</p>
<div id="gridContent">
    <table id="grid">
        <thead>
            <tr>
                <th>STT</th>
                <th>UserName</th>
                <th>PhoneNumber</th>
                <th>Email</th>
                <th>Vai tro</th>
                <th>Chuc nang</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model){
                <tr>
                    <td></td>
                    <td>@item.UserName</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Email</td>
                    <td>@string.Join(", ", item.Roles)</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.UserId})" class="edit-btn"><abbr title="Cập nhật"><i class="fa fa-edit"></i></abbr></a>
                        <a href="@Url.Action("Delete", new { id = item.UserId})" class="delete-btn"><abbr title="Xóa dữ liệu"><i class="fa fa-trash"></i></abbr> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
