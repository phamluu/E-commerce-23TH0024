@using E_commerce_23TH0024.Models.Identity
@model AspNetUsers

@{
    ViewBag.Title = "Sửa người dùng";
}

<h4 class="title">Sửa người dùng</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row mt-2">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.Partial("_Fields")

    <div class="form-group row mt-2">
        <div class="col-md-2"></div>
        <div class="col-md-10">
            <input type="submit" value="Lưu" class="btn btn-default btn-save" />
            @Html.ActionLink("Quay lại danh sách", "Index", "", new { @class = "btn btn-list" })
        </div>
    </div>
</div>
}
