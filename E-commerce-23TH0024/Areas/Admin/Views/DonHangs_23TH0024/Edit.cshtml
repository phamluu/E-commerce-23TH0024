@using E_commerce_23TH0024.Models.Ecommerce
@model DonHang

@{
    ViewBag.Title = "Cập nhật đơn hàng";
}

<h2 class="title">@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="row">
        <div class="col-md-8">
            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group row">
                    @Html.LabelFor(model => model.NgayDatHang, "Ngày đặt hàng", htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-10">
                        <span class="form-control">@Model.NgayDatHang</span>
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.IdKhachHang, "Khách hàng", htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-10">
                        <span class="text-danger">@Model.KhachHang?.HoTen</span>
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.IdKhachHang, "Số điện thoại", htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-10">
                        <span>@Model.KhachHang?.SoDienThoai</span>
                    </div>
                </div>
            </div>
        </div>
         <div class="col-md-4">
            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)


                <div class="form-group">
                    @Html.LabelFor(model => model.NgayGiaoHang, "Ngày giao hàng", htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NgayGiaoHang, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NgayGiaoHang, "", new { @class = "text-danger" })
                    </div>
                </div>
               

                <div class="form-group">
                    @Html.LabelFor(model => model.IdNhanVienDuyet, "Nhân viên duyệt", htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-10">
                        @Html.DropDownList("IdNhanVienDuyet", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdNhanVienDuyet, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IdNhanVienGiao, "Nhân viên giao", htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-10">
                        @Html.DropDownList("IdNhanVienGiao", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdNhanVienGiao, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TinhTrang, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("TinhTrang", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
         </div>
    </div>
   <partial name="_FormActions" />
}

