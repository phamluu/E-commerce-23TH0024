@using E_commerce_23TH0024.Models.Ecommerce
@model DiscountRule

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <h4 class="title">@ViewBag.Title</h4>
    <div class="row">
        <div class="col-6">
            <div class="form-group  mt-2">
                @Html.LabelFor(model => model.Name, "Tên chương trình", htmlAttributes: new { @class = "control-label font-weight-bold" }) : 
                @Html.DisplayFor(model => model.Name)
            </div>
            <div class="form-group mt-2">
                @Html.LabelFor(model => model.IdLoaiSanPham, "Loại sản phẩm", htmlAttributes: new { @class = "control-label font-weight-bold" }) :
                @Html.DisplayFor(model => model.LoaiSanPham.TenLSP)
            </div>

            @* <div class="form-group mt-2">
                @Html.LabelFor(model => model.IdCustomerType, "Loại khách hàng", htmlAttributes: new { @class = "control-label font-weight-bold" }) :
                @Html.DisplayFor(model => model.CustomerType.CustomerTypeName)
            </div> *@
            <div class="form-group mt-2">
                @Html.LabelFor(model => model.Description, "Mô tả", htmlAttributes: new { @class = "control-label font-weight-bold" })  :
                @Html.DisplayFor(model => model.Description)
            </div>

            <div class="form-group mt-2">
                @Html.LabelFor(model => model.MinTotalPrice, "Áp dụng tổng tiền tối thiểu", htmlAttributes: new { @class = "control-label font-weight-bold" })  :
                @Html.DisplayFor(model => model.MinTotalPrice)
            </div>
        </div>
        <div class="col-6">
            <div class="form-group mt-2">
                @Html.LabelFor(model => model.Discount_Type, "Loại giảm giá", htmlAttributes: new { @class = "control-label font-weight-bold" })  :
                @Html.DisplayFor(model => model.Discount_Type)
            </div>
            <div class="form-group mt-2">
                @Html.LabelFor(model => model.DiscountPercent, "Phần trăm giảm", htmlAttributes: new { @class = "control-label font-weight-bold" })  :
                @Html.DisplayFor(model => model.DiscountPercent)
            </div>

            <div class="form-group mt-2">
                @Html.LabelFor(model => model.StartDate, "Ngày bắt đầu", htmlAttributes: new { @class = "control-label font-weight-bold" })  :
                @Html.DisplayFor(model => model.StartDate)
            </div>

            <div class="form-group mt-2">
                @Html.LabelFor(model => model.EndDate, "Ngày kết thúc", htmlAttributes: new { @class = "control-label font-weight-bold" })  :
                @Html.DisplayFor(model => model.EndDate)
            </div>
            <div class="form-group mt-2">
                @Html.LabelFor(model => model.DiscountAmount, "Tiền giảm (đ)", htmlAttributes: new { @class = "control-label font-weight-bold" })  :
                @Html.DisplayFor(model => model.DiscountAmount)
            </div>
        </div>
    </div>
    
</div>
<p class="mt-4">
    @Html.ActionLink("Sửa", "Edit", new { id = Model.Id }, new {@class = "btn btn-edit"}) |
    @Html.ActionLink("Quay lại danh sách", "Index", "", new {@class="btn btn-list"})
</p>
