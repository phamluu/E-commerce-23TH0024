@using E_commerce_23TH0024.Models
@model E_commerce_23TH0024.Models.ShippingViewModel
@{
    ViewBag.Title = "Tính phí giao hàng";
}

<h4 class="title">Tính phí vận chuyển</h4>

@using (Html.BeginForm())
{
    @Html.Hidden("isFormSubmitted", false)
    <div class="form-group row mt-2">
        @Html.LabelForModel("Nhập địa chỉ gửi", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.addressFrom, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessage("addressFrom", "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mt-2">
        @Html.Label("","Nhập địa chỉ nhận", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.addressTo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessage("addressTo", "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mt-2">
        @Html.Label("","Nhập cân nặng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.weight, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessage("weight", "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mt-2">
        @Html.Label("","Phương thức giao hàng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("shippingMethod", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessage("shippingMethod", "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mt-2">
        @Html.Label("","Khoảng cách", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (Model != null)
            {
                <span>@Model.Distance</span>
            }
        </div>
    </div>
    <div class="form-group row mt-2">
        @Html.Label("","Phí giao hàng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (Model != null)
            {
                <span>@Helper.money(Model.shippingFee)</span>
            }
        </div>
    </div>
    <div class="form-group row mt-3">
        <div class="col-md-2"></div>
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Tính phí giao hàng" class="btn btn-default" id="submitButton" />
        </div>
    </div>
}

