@using E_commerce_23TH0024.Models.Ecommerce
@model ProductVariantAttribute

@{
    ViewBag.Title = "Cập nhật giá trị biến thể";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4 class="title">Cập nhật giá trị biến thể</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group mt-2">
        @Html.LabelFor(model => model.IdProductVariant, "Biến thể", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
                @Html.DropDownList("IdProductVariant", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdProductVariant, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group mt-2">
        @Html.LabelFor(model => model.IdProductAttribute, "Thuộc tính", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
                @Html.DropDownList("IdProductAttribute", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdProductAttribute, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mt-2">
        @Html.LabelFor(model => model.IdAttributeValue, "Giá trị thuộc tính", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
                @Html.DropDownList("IdAttributeValue", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdProductAttribute, "", new { @class = "text-danger" })
        </div>
    </div>

        <partial name="_FormActions" />
</div>
}
<script>
    $(document).ready(function () {
        var attributeValueDropdown = $("#IdAttributeValue");
            $("#IdProductAttribute").change(function () {
                var attributeId = $(this).val();
                if (attributeId) {
                    $.ajax({
                        url: '@Url.Action("ValueListForAttribute", "AttributeValues_23TH0024")',
                        type: 'GET',
                        data: { AttributeID: attributeId },
                        success: function (data) {
                            attributeValueDropdown.empty();
                            attributeValueDropdown.append('<option value="">Chọn giá trị</option>');
                            $.each(data, function (index, item) {
                                attributeValueDropdown.append('<option value="' + item.Value + '">' + item.Text + '</option>');
                            });
                        },
                        error: function () {
                            alert("Có lỗi xảy ra khi lấy dữ liệu.");
                        }
                    });
                } else {
                    $("#IdAttributeValue").empty();
                }
            });
        });
</script>