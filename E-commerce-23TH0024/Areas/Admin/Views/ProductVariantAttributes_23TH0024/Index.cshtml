@using E_commerce_23TH0024.Models.Ecommerce
@model IEnumerable<ProductVariantAttribute>

@{
    ViewBag.Title = "Danh sách chi tiết biến thể";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4 class="title">Danh sách chi tiết biến thể</h4>

<p>
    @Html.ActionLink("Thêm mới", "Create", "", new {@class = "btn btn-add"})
</p>
<table class="table">
    <tr>
        <th>Sản phẩm</th>
        <th>
            @Html.DisplayName("Biến thể")
        </th>
        <th>
            @Html.DisplayName("Thuộc tính")
        </th>


        <th>
            @Html.DisplayName("Giá trị")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductVariant.SanPham.TenSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductVariant.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductAttribute.AttributeName)
        </td>


        <td>
            @Html.DisplayFor(modelItem => item.AttributeValue.Value)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
