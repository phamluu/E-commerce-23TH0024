@using E_commerce_23TH0024.Models.Ecommerce
@model List<ProductAttribute>

@{
    ViewBag.Title = "Danh sách thuộc tính";
}

<style>
    .table th,
    .table td {
        font-size: 0.95rem;
        vertical-align: middle;
    }

    .table td {
        white-space: normal;
    }

    .btn-sm i {
        font-size: 1rem;
    }
</style>

<section class="mb-4 mt-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
        <h2 class="fs-5 fw-semibold text-primary d-flex align-items-center gap-2 mb-0">
            <i class="bi bi-ui-checks-grid"></i> @ViewBag.Title
        </h2>
        <a href="@Url.Action("Create")" class="btn btn-sm btn-primary d-flex align-items-center gap-1">
            <i class="bi bi-plus-circle"></i> Thêm mới
        </a>
    </div>

    <partial name="_AlertMessages" />

    <div class="card shadow-sm border border-light-subtle rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered align-middle mb-0">
                    <thead class="table-light text-nowrap">
                        <tr>
                            <th class="text-center">Mã thuộc tính</th>
                            <th>Tên thuộc tính</th>
                            <th class="text-center">Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.Id</td>
                                    <td>@item.AttributeName</td>
                                    <td class="text-center">
                                        <div class="d-inline-flex gap-2">
                                            <a href="@Url.Action("Edit", new { id = item.Id })"
                                               class="btn btn-sm btn-outline-warning" title="Cập nhật">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a href="@Url.Action("Details", new { id = item.Id })"
                                               class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = item.Id })"
                                               class="btn btn-sm btn-outline-danger"
                                               onclick="return confirm('Bạn có chắc chắn muốn xóa?');"
                                               title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted">Không có dữ liệu</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
