@using E_commerce_23TH0024.Models.Ecommerce
@model CustomerType

@{
    ViewBag.Title = "Cập nhật loại khách hàng";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4 class="title">@ViewBag.Title</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group row mt-2">
        @Html.LabelFor(model => model.CustomerTypeName, "Loại khách hàng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CustomerTypeName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CustomerTypeName, "", new { @class = "text-danger" })
        </div>
    </div>

   
</div>
    <partial name="_FormActions" />
}

