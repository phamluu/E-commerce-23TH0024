@using E_commerce_23TH0024.Common.Helpers
@model IEnumerable<WorkManagement.Entities.Project>

@{
    ViewData["Title"] = "Quản lý Dự án";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">Danh sách Dự án</h2>
        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle"></i> Thêm mới
        </a>
    </div>

    @Html.Partial("_AlertMessages")

    <!-- Tổng doanh thu -->
    <div class="mb-3">
        <!-- Desktop -->
        <div class="alert alert-success d-none d-md-flex justify-content-between align-items-center shadow-sm">
            <div><i class="bi bi-cash-coin me-2"></i><strong>Tổng doanh thu:</strong></div>
            <div class="fs-5 fw-bold text-end">@Model.Sum(p => p.ProjectPrice).ToVnCurrency() đ</div>
        </div>

        <!-- Mobile -->
        <div class="card bg-light border-success d-block d-md-none shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div><i class="bi bi-cash-coin me-2 text-success"></i><strong>Tổng doanh thu</strong></div>
                <div class="fw-bold text-success">@Model.Sum(p => p.ProjectPrice).ToVnCurrency() đ</div>
            </div>
        </div>
    </div>

    <!-- Table for desktop -->
    <div class="table-responsive d-none d-md-block">
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>STT</th>
                    <th>Tên dự án</th>
                    <th>Ngày triển khai</th>
                    <th>Ngày hoàn thành</th>
                    <th>Giá</th>
                    <th class="text-center" style="width: 180px;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pair in Model.Select((item, index) => new { item, index }))
                {
                    <tr>
                        <td>@(pair.index + 1)</td>
                        <td><a href="@Url.Action("Details", "Project", new { id = pair.item.Id })">@Html.DisplayFor(m => pair.item.Name)</a></td>
                        <td>@pair.item.StartDate?.ToString("dd/MM/yyyy")</td>
                        <td>@pair.item.EndDate?.ToString("dd/MM/yyyy")</td>
                        <td>@pair.item.ProjectPrice.ToVnCurrency()</td>
                        <td class="text-center">
                            @Html.EditButton("Project", pair.item.Id)
                            @Html.DeleteButton(pair.item.Id, Url.Action("Delete", "Project"))
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Cards for mobile -->
    <div class="d-block d-md-none">
        @foreach (var pair in Model.Select((item, index) => new { item, index }))
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title fw-bold"><a href="@Url.Action("Details", "Project", new { id = pair.item.Id })">@(pair.index + 1). @pair.item.Name</a></h5>
                    @if (pair.item.StartDate.HasValue)
                    {
                        <p class="mb-1"><strong>Ngày triển khai:</strong> @pair.item.StartDate?.ToString("dd/MM/yyyy")</p>
                    }
                    @if (pair.item.EndDate.HasValue)
                    {
                        <p class="mb-1"><strong>Ngày hoàn thành:</strong> @pair.item.EndDate?.ToString("dd/MM/yyyy")</p>
                    }
                    @if (pair.item.ProjectPrice.HasValue)
                    {
                        <p class="mb-1"><strong>Giá:</strong> @pair.item.ProjectPrice.ToVnCurrency()</p>
                    }
                    <div class="dropdown position-absolute top-0 end-0 m-2">
                        <button class="btn btn-sm btn-light border-0" type="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-three-dots-vertical text-secondary"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow rounded border-0">
                            <li class="px-2">
                                <div class="d-flex align-items-center gap-2 text-warning">
                                    <i class="bi bi-pencil-square"></i>
                                    @Html.EditButton("Project", pair.item.Id)
                                </div>
                            </li>
                            <li class="px-2 mt-2">
                                <div class="d-flex align-items-center gap-2 text-danger">
                                    <i class="bi bi-trash"></i>
                                    @Html.DeleteButton(pair.item.Id, Url.Action("Delete", "Project"))
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
