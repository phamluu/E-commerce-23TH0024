@using E_commerce_23TH0024.Common.Helpers
@using WorkManagement.Enums
@model WorkManagement.Entities.TaskItem

@{
    ViewData["Title"] = "Xem Task";
}

<div class="container my-4">
    <div class="card shadow-sm">

        <!-- Card Header -->
        <div class="card-header bg-primary text-white d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2">
            <h5 class="mb-0 text-break text-wrap" style="max-width: 100%">
                @Html.DisplayFor(model => model.Title)
            </h5>
            <div class="d-flex flex-wrap gap-2 mt-2 mt-md-0">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-light btn-sm">
                    ✏️ Sửa
                </a>
                <a asp-action="Index" class="btn btn-outline-light btn-sm">
                    ⬅️ Quay lại
                </a>
            </div>
        </div>


        <!-- Card Body -->
        <div class="card-body">
            <div class="row row-cols-1 g-4">

                <!-- Trạng thái -->
                @{
                    var status = (TaskItemStatus)Model.Status;
                    var statusClass = status switch
                    {
                        TaskItemStatus.Todo => "badge bg-danger",
                        TaskItemStatus.InProgress => "badge bg-warning text-dark",
                        TaskItemStatus.Done => "badge bg-success",
                        _ => "badge bg-secondary"
                    };
                }
                <div class="col">
                    <div class="d-flex align-items-center gap-2">
                        <span class="text-muted small">
                            <i class="bi bi-pin-angle-fill me-1"></i> Trạng thái:
                        </span>
                        <span class="@statusClass">
                            @status.GetDisplayName()
                        </span>
                    </div>
                </div>

                <!-- Dự án -->
                <div class="col">
                    <div class="d-flex align-items-center mb-1 text-muted small">
                        <i class="bi bi-folder me-2"></i> Dự án
                    </div>
                    <div class="fw-semibold">@Model.Project?.Name</div>
                </div>

                <!-- Mô tả -->
                <div class="col">
                    <div class="d-flex align-items-center mb-1 text-muted small">
                        <i class="bi bi-file-earmark-richtext me-2"></i> Mô tả
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="border rounded p-2 bg-light small">
                            @Html.Raw(Model.Description)
                        </div>
                    }
                    
                </div>
            </div>
        </div>

    </div>
</div>
