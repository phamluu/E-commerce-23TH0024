@using E_commerce_23TH0024.Models.Users
@model IEnumerable<NhanVien>

@{
    ViewBag.Title = "Quản lý nhân viên";
   
}

<h4 class="title">Quản lý nhân viên</h4>

<p>
    @Html.Partial("_HeadActions")
</p>
@Html.Partial("_AlertMessages")
<table id="grid">
    <thead>
        <tr>
            <th>STT</th>
            <th>Họ tên</th>
            <th>Tên đăng nhập</th>
            <th>Email</th>
            <th>SoDienThoai</th>
            <th>Địa chỉ</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.Count() > 0){
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.HoTen</td>
                    <td>@item.AspNetUser?.UserName</td>
                    <td>@item.AspNetUser?.Email</td>
                    <td>@item.SoDienThoai</td>
                    <td>@item.DiaChi</td>
                    <td>
                        @Html.Partial("_TableActions", item.Id)
                    </td>
                </tr>
            }
        }
        
    </tbody>
</table>



