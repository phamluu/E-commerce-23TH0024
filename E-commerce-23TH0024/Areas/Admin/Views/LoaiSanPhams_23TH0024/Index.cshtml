@using E_commerce_23TH0024.Models.Ecommerce
@model IEnumerable<LoaiSanPham>

@{
    ViewData["Title"] = "Danh sách loại sản phẩm";
}
<style>
    .table th,
    .table td {
        font-size: 0.95rem;
        vertical-align: middle;
    }

    .table td {
        white-space: normal;
    }

    .btn-sm i {
        font-size: 1rem;
    }

</style>

<section class="mb-4 mt-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
        <div class="pb-2 mb-4 d-flex align-items-center gap-2">
            <i class="bi bi-tags-fill fs-3 text-primary"></i>
            <h1 class="fs-4 fw-bold mb-0 text-dark">@ViewData["Title"]</h1>
        </div>
        <div class="d-flex gap-2 flex-wrap">
            <a href="@Url.Action("Create")" class="btn btn-sm btn-primary d-flex align-items-center gap-1">
                <i class="bi bi-plus-circle"></i> Thêm mới
            </a>
            <a href="@Url.Action("ExportExcel", "FileTransfer_23TH0024")" class="btn btn-sm btn-outline-secondary d-flex align-items-center gap-1">
                <i class="bi bi-download"></i> Xuất Excel
            </a>
        </div>
    </div>

    <partial name="_AlertMessages" />

    <div class="card shadow-sm border border-light-subtle rounded-3">

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered align-middle mb-0">
                    <thead class="table-light text-nowrap">
                        <tr>
                            <th>STT</th>
                            <th class="w-75">Tên loại sản phẩm</th>
                            <th class="text-center">Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pair in Model.Select((item, index) =>  ( item, index )))
                        {
                            <tr>
                                <td>@(pair.index+1)</td>
                                <td class="text-break">@pair.item.TenLSP</td>
                                <td class="text-center">
                                    <div class="d-inline-flex gap-2">
                                        <a href="@Url.Action("Edit", new { id = @pair.item.Id })"
                                           class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = @pair.item.Id })"
                                           class="btn btn-sm btn-outline-danger" title="Xóa"
                                           onclick="return confirm('Bạn có chắc chắn muốn xóa?');">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
