@using E_commerce_23TH0024.Common.Helpers
@model IEnumerable<E_commerce_23TH0024.Models.SanPhamViewModels>

@{
    ViewBag.Title = "Sản phẩm";
}
<style>
    .d-flex {
        align-items: center;
    }

    .form-search label {
        white-space: nowrap;
        margin-right: 5px;
    }

    #grid_filter{
        display:none;
    }

    .btn i {
        font-size: 1rem;
    }

    .card .form-label {
        font-weight: 500;
    }

    .btn-group .dropdown-menu a {
        cursor: pointer;
    }

    .table img {
        max-height: 60px;
        object-fit: contain;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        }

        .btn i {
            font-size: 1rem;
        }

    .dropdown-menu {
        border-radius: 0.5rem;
    }

    .dropdown-item:hover {
        background-color: #f0f2f5;
    }

    .card-body input.form-control {
        border-radius: 0.5rem;
        border-color: #dee2e6;
        transition: border-color 0.2s ease-in-out, box-shadow 0.2s;
    }

        .card-body input.form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.15rem rgba(13, 110, 253, 0.15);
        }

    .form-label {
        color: #495057;
        font-size: 0.95rem;
    }
</style>
<h4 class="title">Sản phẩm</h4>

<div class="mb-3">
    <div class="d-flex flex-wrap gap-2 align-items-center mb-3">
        <a href="@Url.Action("Create")" class="btn btn-sm btn-primary rounded-pill d-flex align-items-center gap-1 px-3 fw-medium">
            <i class="bi bi-plus-circle"></i> Thêm mới
        </a>
        <a href="@Url.Action("ImportExcel", "FileTransfer_23TH0024")" class="btn btn-sm btn-outline-secondary rounded-pill d-flex align-items-center gap-1 px-3 fw-medium">
            <i class="bi bi-file-earmark-arrow-up"></i> Import Excel
        </a>
        <a href="@Url.Action("ImportExcel_Custom", "FileTransfer_23TH0024")" class="btn btn-sm btn-outline-secondary rounded-pill d-flex align-items-center gap-1 px-3 fw-medium">
            <i class="bi bi-file-zip"></i> Import tùy chỉnh
        </a>
        <a href="@Url.Action("ExportExcel", "FileTransfer_23TH0024")" class="btn btn-sm btn-success rounded-pill d-flex align-items-center gap-1 px-3 fw-medium">
            <i class="bi bi-file-earmark-arrow-down"></i> Export Excel
        </a>

        <div class="btn-group">
            <button class="btn btn-sm btn-outline-danger rounded-pill px-3 dropdown-toggle fw-medium" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-trash"></i> Xóa
            </button>
            <ul class="dropdown-menu shadow-sm">
                <li><a class="dropdown-item small" href="#">Xóa chọn</a></li>
                <li><a class="dropdown-item small" href="#">Xóa tùy chỉnh</a></li>
                <li>
                    <a class="dropdown-item text-danger small" href="javascript:void(0);"
                       onclick="if(confirm('Bạn có chắc chắn muốn xóa tất cả?')) { window.location.href='@Url.Action("DeleteAll")'; }">
                        Xóa tất cả
                    </a>
                </li>
            </ul>
        </div>
    </div>


</div>

<div class="card shadow-sm border border-light-subtle rounded-3 mb-4">
    <div class="card-body">
        <div class="row gy-2 gx-3 align-items-center">
            <div class="col-md-4">
                <div class="d-flex align-items-center">
                    <label for="search-ten" class="form-label mb-0 me-2 text-nowrap">Tên:</label>
                    <input type="text" id="search-ten" class="form-control form-control-sm flex-grow-1" placeholder="Nhập tên...">
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex align-items-center">
                    <label for="search-loai" class="form-label mb-0 me-2 text-nowrap">Loại:</label>
                    <input type="text" id="search-loai" class="form-control form-control-sm flex-grow-1" placeholder="Nhập loại...">
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex align-items-center">
                    <label for="search-gia" class="form-label mb-0 me-2 text-nowrap">Giá:</label>
                    <input type="text" id="search-gia" class="form-control form-control-sm flex-grow-1" placeholder="Nhập giá...">
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_AlertMessages" />



<div id="gridContent" class="table-responsive d-none d-md-block">
    <table id="grid" class="table table-hover table-bordered table-striped align-middle rounded shadow-sm">
        <thead>
            <th>STT</th>
            <th>Hình đại diện</th>
            <th>Tên sản phẩm</th>
            <th>Đơn giá</th>
            <th>Đơn vị tính</th>
            <th>Loại sản phẩm</th>
            <th>Chức năng</th>
        </thead>
        <tbody>
            @foreach (var pair in Model.Select((item, index) => (item, index))){
                <tr>
                    <td>@(pair.index + 1)</td>
                    <td><img src="~/Uploads/@pair.item.Anh" class="img-fluid"/></td>
                    <td>@pair.item.TenSP </td>
                    <td>@pair.item.DonGia.ToVnCurrency()</td>
                    <td>@pair.item.DVT</td>
                    <td>@pair.item.LoaiSanPham?.TenLSP</td>
                    <td>
                        <partial name="_TableActions" model=pair.item.Id />
                    </td>
                </tr>
            }
           
        </tbody>
    </table>
</div>
<div class="d-block d-md-none">
    @foreach (var pair in Model.Select((item, index) => new { item, index }))
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <img src="~/Uploads/@pair.item.Anh" class="img-fluid"/>
                        </div>
                        <div class="col-8">
                            <h5 class="card-title">@pair.item.TenSP</h5>
                            <p class="card-text">Đơn giá: @pair.item.DonGia.ToVnCurrency() đ</p>
                            <p class="card-text">Loại sản phẩm: @pair.item.LoaiSanPham?.TenLSP</p>
                        </div>
                    </div>
                    <div class="dropdown position-absolute top-0 end-0 m-2">
                        <button class="btn btn-sm btn-light border-0" type="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-three-dots-vertical text-secondary"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow rounded border-0">
                            <li class="px-2">
                                <div class="d-flex align-items-center gap-2 text-warning">
                                    <i class="bi bi-pencil-square"></i>
                                    @Html.EditButton("Project", pair.item.Id)
                                </div>
                            </li>
                            <li class="px-2 mt-2">
                                <div class="d-flex align-items-center gap-2 text-danger">
                                    <i class="bi bi-trash"></i>
                                    @Html.DeleteButton(pair.item.Id, Url.Action("Delete", "Project"))
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        }
</div>
<script>
    document.getElementById("dropdownMenuButton").addEventListener("click", function () {
        var dropdownMenu = this.nextElementSibling;
        if (dropdownMenu.style.display === "none" || dropdownMenu.style.display === "") {
            dropdownMenu.style.display = "block";
        } else {
            dropdownMenu.style.display = "none";
        }
    });
    $(document).ready(function () {
        $('#MaLSP').select2();
    });
</script>

<script>
    $(document).ready(function () {
        var table = $('#grid').DataTable();
        $('#search-ten').on('keyup change', function () {
            table.column(2).search(this.value).draw();
        });
        $('#search-loai').on('keyup change', function () {
            table.column(5).search(this.value).draw();
        });
        $('#search-gia').on('keyup change', function () {
            table.column(3).search(this.value).draw();
        });
    });
</script>
